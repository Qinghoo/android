<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sea">
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@mipmap/menu_1"
        android:gravity="right|center"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您好，欢迎回来！"
            android:textColor="@android:color/white"
            android:id="@+id/textView"
            android:textSize="16dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="253dp"
        android:layout_height="512dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <Button
            android:id="@+id/xiugai_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="信息修改"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
        <Button
            android:id="@+id/no5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/xiugai_btn"
            android:gravity="center"
            android:text="商品展示"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/no6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/no5"
            android:gravity="center"
            android:text="插入数据"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
        <Button
            android:id="@+id/no7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/no6"
            android:gravity="center"
            android:text="访问内容"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            android:id="@+id/returnback"
            android:layout_below="@+id/no10"
            android:layout_marginTop="36dp"
            android:onClick="back_to_login"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="#d95b5b"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:id="@+id/no8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/no7"
            android:gravity="center"
            android:text="調用服务"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
        <Button
            android:id="@+id/no9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/no8"
            android:gravity="center"
            android:text="新闻客户端"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
        <Button
            android:id="@+id/no10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/no9"
            android:gravity="center"
            android:text="刮刮卡"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>


</RelativeLayout>
