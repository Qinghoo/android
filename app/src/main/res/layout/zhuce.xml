<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sea" >
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@mipmap/menu_1"
        android:gravity="right|center"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/zhuce_layout"
        android:layout_width="253dp"
        android:layout_height="512dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="请输入以下信息"
            android:textColor="@android:color/white"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/et_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="用户名"
            android:textColor="@android:color/white"
            android:textColorHint="#95A1AA" />

        <requestFocus />

        <EditText
            android:id="@+id/et_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_info1"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="密码"
            android:textColor="@android:color/white"
            android:textColorHint="#95A1AA" />

        <requestFocus />

        <EditText
            android:id="@+id/et_info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_info2"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="确认密码"
            android:textColor="@android:color/white"
            android:textColorHint="#95A1AA" />

        <requestFocus />

        <Button
            android:id="@+id/register_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="注册保存"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
        <Button
            android:id="@+id/register_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/register_btn_sure"
            android:gravity="center"
            android:text="取消"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>
</RelativeLayout>
