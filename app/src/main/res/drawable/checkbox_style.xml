<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 勾选的样式图放到res目录下的drawable中，然后在这里使用 -->
    <item android:drawable="@drawable/box_checked" android:state_checked="true"/>
    <!-- 未勾选的样式图放到res目录下的drawable中，然后在这里使用 -->
    <item android:drawable="@drawable/box_unchecked" android:state_checked="false"/>
    <item android:drawable="@drawable/box_unchecked"/>
</selector>